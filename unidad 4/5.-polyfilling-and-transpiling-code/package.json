{
    "type": "module",
    "name": "polyfill-and-transpile",
    "version": "1.0.0",
    "description": "Code to show how to polyfill and transpile code",
    "main": "src/index.js",
    "scripts": {
        "compilar:moderno": "webpack --config webpack.modern.js --mode $modo",
        "compilar:antiguo": "webpack --config webpack.legacy.js --mode $modo",
        "desarrollo": "cross-env modo=development npm-run-all --serial compilar:moderno compilar:antiguo",
        "produccion": "cross-env modo=production npm-run-all --serial compilar:moderno compilar:antiguo",
        "limpia": "rimraf compilado",
        "todo:des": "npm-run-all limpia des",
        "todo:prod": "npm-run-all limpia des"
    },
    "keywords": [
        "webpack",
        "polyfill",
        "transpile"
      ],
    "author": "Alejandro Viana RÃ­os",
    "license": "ISC",
    "devDependencies": {
        "@babel/preset-env": "^7.26.0",
        "core-js": "^3.39.0",
        "cross-env": "^7.0.3",
        "npm-run-all": "^4.1.5",
        "regenerator-runtime": "^0.14.1",
        "rimraf": "^6.0.1",
        "webpack": "^5.97.1",
        "webpack-cli": "^5.1.4",
        "webpack-merge": "^6.0.1",
        "css-loader": "^7.1.2",
        "html-webpack-plugin": "^5.6.3",
        "mini-css-extract-plugin": "^2.9.2"
    }
}
